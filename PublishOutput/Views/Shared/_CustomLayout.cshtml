<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevOps Tutorials</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Dark Black Navbar without Hamburger Menu -->
    <nav class="navbar navbar-brand navbar-dark">
        <div class="container-fluid">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Tutorial/Index">Linux</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            @if (ViewBag.ShowSidebar == true)
            {
                <!-- Sidebar -->
                <div class="col-md-2 custom-sidebar">
                    @RenderSection("Sidebar", required: false)
                </div>
            }
            <!-- Main Content -->
            <div class="@(ViewBag.ShowSidebar == true ? "col-md-10" : "col-md-12") custom-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="text-center mt-4">
        <p>© @DateTime.Now.Year - DevOps Tutorials</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-sanitize/1.8.2/angular-sanitize.min.js"></script>
    <script src="~/Assets/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>